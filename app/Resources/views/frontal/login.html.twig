{% extends 'base.html.twig' %}
{# {% form_theme form 'form/tapaForm.html.twig' %} #}
{% block title %}Login usuario{% endblock %}
{% block contenido %}

    <div class="container">
        <h2 class="mt-4 mb-3">Login</h2>
        <div class="row">
            <div class="col-lg-8">
                {% if error %}
                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
               <form action="{{ path('login') }}" method="post">
                    <div class="control-group form-group">
                        <div class="controls">
                            <label for="username">Username:</label>
                            <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" />
                        </div>
                    </div>
                    <div class="control-group form-group">
                        <div class="controls">
                            <label for="password">Password:</label>
                            <input class="form-control" type="password" id="password" name="_password" />
                        </div>
                    </div>
                    <button class="btn btn-primary" type="submit">login</button>
                </form>
            </div>
            <div class="col-lg-4">
                <h2>Para qué registrarse?</h2>
                <p>Con tu registro podrás realizar reservas desde la aplicación</p>
                <p>Solo te llevara unos segundos, introuce tu email y una contraseña</p>
                <a href="{{ path('registro') }}">REGISTRO</a>
            </div>
      </div>
    </div>
{% endblock %}