{% extends 'base.html.twig' %}
{% block title %}Reservas{% endblock %}
{% block contenido %}
    
   <!-- Page Content -->
    <div class="container">
        <h1 class="mt-4 mb-3">Reservas</h1>
        <div class="row">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Editar</th>
                        <th scope="col">Fecha</th>
                        <th scope="col">Num comensales</th>
                        <th scope="col">Observaciones</th>
                        <th scope="col">Borrar</th>
                    </tr> 
                </thead>
                <tbody>
                {% for reserva in reservas %}
                    <tr>
                        <td scope="col"><a href="{{ path('nuevaReserva', { 'id': reserva.id }) }}"><i class="far fa-edit"></i></a></td>
                        <td scope="col">{{ reserva.fecha | date('Y/m/d h:i') }}</td>
                        <td scope="col">{{ reserva.comensales }}</td>
                        <td scope="col">{{ reserva.observaciones }}</td>
                        <td scope="col"><a href="#" onclick="return controlBorrado('{{ path('borrarReserva', { 'id': reserva.id }) }}','{{ reserva.fecha | date('Y/m/d h:i') }}')"><i class="far fa-trash-alt"></i></a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>   
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="{{asset('js/controlBorrado.js')}}"></script>
{% endblock %}